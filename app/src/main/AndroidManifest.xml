<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.promoteprovider.promotevideodownloader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PromoteStatusSaver">
        <activity android:name="com.promoteprovider.promotevideodownloader.Policy">

        </activity>
        <activity android:name="com.promoteprovider.promotevideodownloader.About" />
        <activity android:name="com.promoteprovider.promotevideodownloader.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.promoteprovider.promotevideodownloader.InstagramActivity" />
        <activity android:name="com.promoteprovider.promotevideodownloader.FacebookActivity" />
        <activity android:name="com.promoteprovider.promotevideodownloader.WhatsUpActivity" />
        <activity android:name="com.promoteprovider.promotevideodownloader.ShareChatActivity" />
        <activity android:name="com.promoteprovider.promotevideodownloader.MainActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/APPLICATION_ID" />
    </application>

</manifest>